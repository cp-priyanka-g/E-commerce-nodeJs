<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Product</title>
</head>
<body>
    <%- include('header.ejs') %>  
    <form class="form-inline" action="/search-byname" method="post">
     
        <div class="form-group mx-sm-3 mb-2">
          <label for="inputPassword2" class="sr-only">Product name</label>
          <input type="text" class="form-control" id="inputPassword2" name="Description" placeholder="Product name">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Search</button>
      </form>
      <table border="1">
        <tr>
            <th>S.N</th>
            <th>Product</th>
            <th>Price</th>
           
           
        </tr>
        
        <%
        if(data.length!=0){
        var i=1;
        data.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.Description  %></td>
            <td><%=data.price  %></td>
             </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
</body>
</html>
